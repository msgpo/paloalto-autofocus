</div>

<div class = "time">
       {{#if data._source.create_date}}
           <span class="Ctimefirst"> Date File Created: </span>
           <b>{{moment-time data._source.create_date}}</b>
       {{/if}}
   </div>

   <div class = "time">
          {{#if data._source.finish_date}}
              <span class="Ctimefirst"> Date File Finished: </span>
              <b>{{moment-time data._source.finish_date}}</b>
          {{/if}}
      </div>
      <div class = "time">
             {{#if data._source.update_date}}
                 <span class="Ctimefirst"> Date File Updated: </span>
                 <b>{{moment-time data._source.update_date}}</b>
             {{/if}}
         </div>

<div class = "tags">
        {{#if data._source.region}}
        <span class="datas"> Regions Affected: </span>
        {{/if}}
            {{#if data._source.region}}
                {{#each data._source.region as |data|}}
                        <li><b>{{data}}</b></li>
                {{/each}}
            {{else}}
            {{/if}}
    </div>

<div class = "tags">
        {{#if data._source.tag}}
        <span class="datas"> Tags: </span>
        {{/if}}
            {{#if data._source.tag}}
                {{#each data._source.tag as |data|}}
                        <li><b>{{data}}</b></li>
                {{/each}}
            {{else}}
            {{/if}}
    </div>

{{/each}}
{{/if}}
