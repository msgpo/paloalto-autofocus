<div class = "fileData">
    {{#if block.data.details.total}}
        <span class="counts"> Total Number of Hits: </span>
        <b>{{block.data.details.body.total}}</b>
    {{/if}}
</div>

<div class = "fileData">
        {{#if block.data.details.entity}}
        <i class = "fa fa-eye #ADADAD"></i><a href="https://autofocus.paloaltonetworks.com/#/sample/{{block.data.details.entity}}"> View in AutoFocus </a>
        {{/if}}
    </div>

{{#if block.data.details.body.hits}}
{{#each block.data.details.body.hits as |data|}}

<div class = "fileData">
    {{#if data._source.malware}}
        <span class="counts"> Malware: </span>
        <b>{{data._source.malware}}</b>
    {{/if}}
</div>

<div class = "fileData">
    {{#if data._source.filetype}}
